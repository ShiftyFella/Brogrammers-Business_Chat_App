<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.centennialcollege.brogrammers.businesschatapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_chats"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/login_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.registration.RegistrationActivity"
            android:label="@string/registration_title"
            android:parentActivityName=".ui.login.LoginActivity" />
        <activity
            android:name=".activity.ContactsActivity"
            android:label="Contacts"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.UserContactsActivity"
            android:label="My Contacts"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ProfileActivity"
            android:label="Profile"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ChatActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.GroupChatActivity" />
    </application>

</manifest>