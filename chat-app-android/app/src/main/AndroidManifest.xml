<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.centennialcollege.brogrammers.businesschatapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BusinessChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_chats"
            android:theme="@style/AppTheme.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.registration.RegistrationActivity"
            android:label="@string/registration_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.login.LoginActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"/>
        <activity
            android:name=".activity.ContactsActivity"
            android:label="@string/add_contacts_title"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.MyContactsActivity"
            android:label="@string/my_contacts_title"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:label="@string/profile_title"
            android:parentActivityName=".activity.HomeActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"/>
        <activity
            android:name=".activity.ChatActivity"
            android:parentActivityName=".activity.HomeActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.ChatInfoActivity"
            android:label="@string/chat_info_title" />
        <activity
            android:name=".activity.GroupChatActivity"
            android:label="@string/new_group_chat_title"
            android:parentActivityName=".activity.HomeActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"/>
    </application>

</manifest>